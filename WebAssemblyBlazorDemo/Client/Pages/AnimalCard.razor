
@using WebAssemblyBlazorDemo.Shared
<h3>AnimalCard</h3>

<div class="card" style="width:18rem;">
    <img src="@CurrentAnimal.PictureUrl" class="card-img-top" alt="MyPicture" />

    <div class="card-body">
        <h5 class="card-title">@CurrentAnimal.Name</h5>
        <p class="card-text">
            @if (CurrentAnimal.AnimalKind == AnimalKind.Dog)
            {
                @: I'm a dog @(CurrentAnimal.Gender==Gender.Male?"male":"female") of @CurrentAnimal.Age years old.
            }
            else
            {
                @: I'm a cat @(CurrentAnimal.Gender==Gender.Male?"male":"female") of @CurrentAnimal.Age years old.
            }
        </p>
        <a href="" class="btn btn-primary">Details</a>

        <button class="btn btn-primary">Adopt</button>
    </div>
</div>


@code {
    [Parameter]
    public Animal CurrentAnimal { get; set; }
}
